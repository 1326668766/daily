{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "daily",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "scope": [
          "http://**",
          "https://**"
        ]
      },
      "fs": {
        "scope": [
          "$RESOURCE/img/*",
          "https://**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.sasaki",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["./img"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/sasaki-ai/daily/releases/download/updater/update.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEMjE1OUI2RUVDRDcwOEIKUldTTGNNM3V0bGtoWGRBL1d2WUZSdWErWkwzRG5KQ3M0U2N4VllXQkErWXpXUFlBQ3ZmMno3Z1AK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 400,
        "resizable": false,
        "title": "daily",
        "width": 400,
        "center": true,
        "label": "login",
        "visible": false
      },
      {
        "width": 400,
        "height": 240,
        "decorations": false,
        "transparent": true,
        "url": "/open",
        "label": "open",
        "center": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}